<resources>
    <declare-styleable name="others">
        <attr name="colorPrimarySecondary" format="color" />
        <attr name="colorPrimarySecondary2" format="color" />
        <attr name="colorPrimaryOpacity" format="color" />
        <attr name="colorAccentOpacity" format="color" />
        <attr name="btnTintColor" format="color" />
        <attr name="titleTextColor" format="color" />
        <attr name="subTitleTextColor" format="color" />
        <attr name="bodyTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MusicVisualizer">
        <attr name="tint" format="color"/>
        <attr name="chunkCount" format="integer"/>
        <attr name="chunkSpace" format="dimension"/>
        <attr name="chunkSize" format="dimension"/>
        <attr name="chunkRound" format="boolean"/>
        <attr name="alignType" format="enum">
            <enum name="center" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DoubleTapView">
        <attr name="seekSeconds" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="iconAnimationDuration" format="integer" />
        <attr name="arcSize" format="dimension" />
        <attr name="tapCircleColor" format="color" />
        <attr name="backgroundCircleColor" format="color" />
        <attr name="iconColor" format="color"/>
        <attr name="colorOpacity" format="float"/>
        <attr name="doubleTapDelay" format="integer"/>

        <attr name="textAppearance" format="reference" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <item name="arc_layout" type="id"/>
    <item name="seconds_layout" type="id"/>
</resources>