<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="settings"
            type="com.crrl.beatplayer.utils.SettingsUtility" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimary">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:background="@drawable/btn_ripple"
            android:contentDescription="@string/cover"
            android:onClick="back"
            android:tint="?colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="7dp"
            android:text="@string/settings"
            android:textColor="?subTitleTextColor"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_10"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/appearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/appearance"
                        android:textColor="?bodyTextColor"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        app:clipToOutline="@{true}"
                        android:background="@drawable/song_detail_cover_frame"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/appearance">

                        <LinearLayout
                            android:id="@+id/theme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_item_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:onClick="showThemes"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_theme"
                                app:tint="?btnTintColor"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="@string/theme_title"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="@string/settings_theme_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/now_playing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/now_playing"
                        android:textColor="?bodyTextColor"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/now_playing_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        app:clipToOutline="@{true}"
                        android:background="@drawable/song_detail_cover_frame"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/now_playing"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/animation_container"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_ripple_start"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:onClick="showCoverTransformers"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_animation"
                                app:tint="?btnTintColor"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="@string/cover_transition"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="2"
                                    android:text="@string/cover_transition_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/extra_info_container"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/list_item_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_below="@+id/animation_container">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_extra_info"
                                app:tint="?btnTintColor"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_size_20"
                                    android:maxLines="1"
                                    android:text="@string/extra_info"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="2"
                                    android:text="@string/extra_info_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/extra_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="@{settings.extraInfo}"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/show_extra_info_container"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_ripple_start"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:onClick="showCoverTransformers"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_below="@+id/extra_info_container">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_animation"
                                app:tint="?btnTintColor"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="@string/cover_transition"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="2"
                                    android:text="@string/cover_transition_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/extra_actions_container"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_ripple_end"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_below="@+id/show_extra_info_container">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                app:tint="?btnTintColor"
                                android:src="@drawable/ic_play"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/text_size_20"
                                    android:maxLines="1"
                                    android:text="@string/extra_actions"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="2"
                                    android:text="@string/extra_actions_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/extra_actions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="@{settings.extraAction}"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/show_extra_action_container"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/btn_ripple_start"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:onClick="showCoverTransformers"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_10"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_below="@+id/extra_actions_container">

                            <ImageView
                                android:layout_width="@dimen/btn_size"
                                android:layout_height="@dimen/btn_size"
                                android:scaleType="centerInside"
                                app:tint="?btnTintColor"
                                android:contentDescription="@string/cover" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="@string/cover_transition"
                                    android:textColor="?titleTextColor"
                                    android:textSize="@dimen/title_text_size" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:maxLines="2"
                                    android:text="@string/cover_transition_description"
                                    android:textColor="?colorAccent"
                                    android:textSize="@dimen/sub_title_text_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>