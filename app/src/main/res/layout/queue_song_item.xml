<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="song"
            type="com.crrl.beatplayer.models.Song" />

        <variable
            name="viewModel"
            type="com.crrl.beatplayer.ui.viewmodels.SongDetailViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/list_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/song_cover_size"
            android:layout_height="@dimen/song_cover_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/selected"
            android:background="@drawable/song_cover_frame"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_empty_cover"
            app:albumId="@{song.albumId}" />

        <LinearLayout
            android:id="@+id/listViewTextContainer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@id/item_menu"
            android:layout_toEndOf="@+id/cover"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:textColor="?titleTextColor"
                    android:textSize="@dimen/title_text_size"
                    app:html="@{song.title}"
                    app:marquee="@{true}"
                    app:selected="@{safeUnbox(viewModel.idsChanged.current == song.id)}" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{song.artist, default=@string/artist}"
                    android:textColor="?subTitleTextColor"
                    android:textSize="@dimen/sub_title_text_size"
                    app:marquee="@{false}"
                    app:selected="@{safeUnbox(viewModel.currentData.id == song.id)}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="@string/separator"
                    android:textColor="?subTitleTextColor"
                    android:textSize="@dimen/sub_title_text_size"
                    app:marquee="@{false}"
                    app:selected="@{safeUnbox(viewModel.currentData.id == song.id)}" />

                <TextView
                    android:id="@+id/album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{song.album, default=@string/album}"
                    android:textColor="?subTitleTextColor"
                    android:textSize="@dimen/sub_title_text_size"
                    app:marquee="@{false}"
                    app:selected="@{safeUnbox(viewModel.currentData.id == song.id)}" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/song_cover_size"
            android:layout_height="@dimen/song_cover_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/selected"
            android:background="@drawable/visualizer_song_item"
            android:gravity="center"
            app:show="@{safeUnbox(viewModel.currentData.id == song.id)}"
            app:state="@{safeUnbox(viewModel.currentState.state)}">

            <com.crrl.beatplayer.ui.widgets.MusicVisualizer
                android:id="@+id/visualizer"
                android:layout_width="31dp"
                android:layout_height="40dp"
                app:alignType="center"
                app:chunkCount="5"
                app:chunkRound="true"
                app:chunkSize="4dp"
                app:chunkSpace="2dp"
                app:tint="@color/white" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/selected"
            android:layout_width="@dimen/btn_size_header"
            android:layout_height="@dimen/btn_size_header"
            android:layout_alignTop="@id/cover"
            android:layout_alignBottom="@id/cover"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_drag_indicator"
            android:tint="?subTitleTextColor" />

        <ImageButton
            android:id="@+id/item_menu"
            android:layout_width="@dimen/btn_size_header"
            android:layout_height="@dimen/btn_size_header"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_ripple_header"
            android:contentDescription="@string/cover"
            android:src="@drawable/ic_more"
            android:tint="?subTitleTextColor" />
    </RelativeLayout>
</layout>
